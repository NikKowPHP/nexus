datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ROO-AUDIT-TAG :: 2.3_ai_assessment_loop.md :: Add attempts field to Assessment model
model Assessment {
  id           String    @id @default(uuid())
  user_id      String
  roadmap_id   String
  content      String?
  ai_feedback  String?
  score        Float?
  status       String    @default("pending")
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  attempts     Int       @default(1) // Added for retry mechanism
}
